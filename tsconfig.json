{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "pretty": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "target": "ES6",
    "watch": true
  }
}
